h1= @post.title
- if @post.published
  span.badge.bg-success Published
- else
  span.badge.bg-secondary Draft
p: small= @post.created_formatted
p Summary: #{@post.summary}
p #{@post.body}

div= link_to 'Back', posts_path, { class: 'btn btn-primary' }
div= link_to 'Edit', edit_post_path(@post), { class: 'btn btn-primary' }
div= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Sure delete?' }, class: 'btn btn-danger'
